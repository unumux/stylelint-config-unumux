{
  "name": "@unumux/stylelint-config-unumux",
  "description": "UnumUX stylelint config",
  "main": "index.js",
  "scripts": {
    "semantic-release": "semantic-release pre && npm publish --access public && semantic-release post",
    "commit": "git-cz"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "codecov.io": "^0.1.6",
    "commitizen": "^2.5.0",
    "cz-conventional-changelog": "^1.1.5",
    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^1.1.1",
    "ghooks": "^1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unumux/stylelint-config-unumux.git"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
